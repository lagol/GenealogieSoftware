<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="0.0" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.maxjacobi.genealogiesoftware.GenealogieSoftwareController">
   <center>
       <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
           <Tab text="Start">
               <VBox>
                   <HBox>
                       <Button text="Open" />
                       <Button text="Close" />
                       <Button text="Save" />
                       <Button text="Save as" />
                       <Button text="Rename" />
                       <Button onAction="#quitApplication" text="Quit" />
                   </HBox>
                   <TabPane prefHeight="600" tabClosingPolicy="UNAVAILABLE">
                       <Tab text="Datenbank">
                           <VBox>
                               <HBox>
                                   <Label text="Name:" />
                                   <Label fx:id="databaseNameLabel" />
                               </HBox>
                               <HBox>
                                   <Label text="Änderungsdatum:" />
                                   <Label fx:id="databaseChangedLabel" />
                               </HBox>
                               <HBox>
                                   <Label text="Größe:" />
                                   <Label fx:id="databaseSizeLabel" />
                               </HBox>
                               <HBox>
                                   <Label text="Besitzer:" />
                                   <Label fx:id="databaseOwnerLabel" />
                               </HBox>
                           </VBox>
                       </Tab>
                       <Tab text="Statistiken">
                           <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
                       </Tab>
                   </TabPane>
               </VBox>
           </Tab>
           <Tab text="Personen">
               <VBox>
                   <TableView fx:id="personsTable" prefHeight="600.0">
                   </TableView>
               </VBox>
           </Tab>
           <Tab text="Beziehungen">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="800.0" />
           </Tab>
           <Tab text="Familien">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="800.0" />
           </Tab>
           <Tab text="Quellen">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="800.0" />
           </Tab>
           <Tab text="Media">
               <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="800.0" />
           </Tab>
       </TabPane>
   </center>
   <bottom>
      <BorderPane prefHeight="17.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <left>
            <Label text="Left Status" BorderPane.alignment="CENTER" />
         </left>
          <right>
              <Label text="Right Status" BorderPane.alignment="CENTER" />
          </right>
      </BorderPane>
   </bottom>
</BorderPane>
